<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_marginLeft="20dp"
	    android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_write_bg"
        android:padding="8dp" >
		
	    <LinearLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="编号:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/car_type"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="123456789012345"
		            />
	        
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="电量:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/batteryTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="90"
		            />
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="灵敏度:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/sensitiveTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="8"
		            />
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="上电状态:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/startStateTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="断电"
		            />
	        
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="布防状态:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/lockStateTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="撤防"
		            />
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="充电状态:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/chargeStateTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="充电中"
		            />
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="睡眠状态:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/sleepStateTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="未睡眠"
		            />
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="外接电源:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/outBatteryStateTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="正常"
		            />
	        
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
	            
               
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            android:text="报警状态:"
	            android:textSize="16sp"
	            />
	        	<TextView 
		            android:id="@+id/alarmStateTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:lines="1"
		            android:layout_marginLeft="10dp"
		            android:text="报警"
		            />
	        
	        </LinearLayout>
	        
	       
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:lines="1"
		            android:gravity="center_vertical"
		            android:textSize="16sp"
		            android:text="车辆地址:"/>
		        
		        <TextView 
		            android:id="@+id/addressTV"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="10dp"
		            android:text="上海市长宁区金钟路sdfsfsfdsdfsfsdf"/>
	        </LinearLayout>
	        
	      
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
